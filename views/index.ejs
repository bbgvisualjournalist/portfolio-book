<!DOCTYPE html>
<html>
	<head>
		<% include partials/template/head.ejs %>
		<style type="text/css">
		#header{margin-bottom: 20px;}
		#prev, #next{display: none;}

		@media (min-width: 900px) {
			#next{display: block;}
		}
		</style>
	</head>
	<body id='home'>

		<div id='container'>
			<div id='header' <%if (projectData.imageshape!='pano'){ %> class='pano' <% } %> >
				<div class='menuBox'>
					<p style='max-width: 700px; margin: 0 auto;'>
					<img src="<%- data[0].mugshot %> " style="float: left; margin-right: 15px">
							<%- description %>
					</p>
				</div>
				<div class='label'>
					<h3>Brian Williamson<br/><span class='tag'>portfolio</span>
					</h3>
				</div>
			</div>


			<div id="illustration">
				<div class='gradient'>
				</div>
				<%- grid %>
			</div>
			<div class='clearAllMobile'></div>
			<div id="about">
				<div class='menuBox'>
					<p><img src="<%- data[0].mugshot %> " style="float: left; margin-right: 15px">
							<%- description %>
					</p>
				</div>
				<div class='label'>
					<h3 <% if (projectData.detail==''){ %>class="noDetail" <% } %> style='margin-bottom:25%;'>
						Brian Williamson<br/><span class='tag'>portfolio</span>
					</h3>
				</div>

				<% if (introDetail){ %>
					<div id='detail' >
						<img src='/images/<%= introDetail %>' />
					</div>
				<% } %>

				<h1 class=''><%= introTitle %></h1>
				<h2 class='summary balance-text'><%- introSummary %></h2>
				<div class="description<% if ( projectData.singlecolumn == "TRUE"){ %> singleColumn<% } %>">
					<%- intro %>
				</div>

<% include partials/template/menu.ejs %>

			</div>
		<a href='<%= previousProject %>' id='prev'><div></div></a>
		<a href='<%= nextProject %>' id='next'><div></div></a>
		</div><!-- container -->
		
<% include partials/template/scripts.ejs %>
		<script type="text/javascript">
			//Dropdown navigation
			$("#about h3" ).click(function() {
				$( "#about .menuBox" ).slideToggle("drop");
			});
			$("#header h3" ).click(function() {
				$( "#header .menuBox" ).slideToggle("drop");
			});

		</script>
	</body>
</html>
